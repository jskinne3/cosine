<p id="notice"><%= notice %></p>

<h1><%= @h1 %></h1>

<%= paginate @books %>

<table>
  <thead>
    <tr>
      <th>Osp work</th>
      <th>Title</th>
      <th>Authors</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.osp_work_id %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.authors %></td>
        <td><%= book.syllabi.length %></td>
      </tr>
    <% end %>
  </tbody>
</table>
